extends layout

block content
	.container-fluid
		.row.text-center
			h2.col-md-4.col-md-offset-4 Create new account
		.row
			.col-md-4.col-md-offset-4.text-center
				form.login-form(action="/user" method="POST")
					.form-group
						label(for="username")
						input.form-control#username(name="username" type=text placeholder="fun-username" maxLength="12")
					.form-group
						label(for="password")
						input.form-control#password(name="password" type="password" placeholder="password" maxLength="24")
					button.btn.btn-default(type="submit") Submit
